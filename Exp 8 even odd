 

while True: 

 try: 

 num = int(input("Enter a number (or type '0' to exit): ")) 

 

 if num == 0: 

 print("Exiting program.") 

break

 

 if num % 2 == 0: 

 print(f"{num} is an even number.") 

 else: 

 print(f"{num} is an odd number.") 

 

 except ValueError: 

 print("Invalid input! Please enter a valid integer.") 

